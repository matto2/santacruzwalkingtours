---
import BaseLayout from "../layouts/BaseLayout.astro";
import Logo from "../assets/images/SCWT-logo_v1.svg";
---

<BaseLayout>
  <a
    href="/"
    class="inline-block w-full hover:opacity-80 transition-opacity duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
    aria-label="Santa Cruz Walking Tours - Return to homepage"
    title="Santa Cruz Walking Tours"
  >
    <Logo
      class="w-full h-auto block"
      aria-hidden="true"
      role="img"
    />
    <span class="sr-only">Santa Cruz Walking Tours</span>
  </a>
  <div
    class="mt-2 relative -mx-4"
    style="width: 100vw; margin-left: calc(-50vw + 50%);"
  >
    <video class="w-full" autoplay muted loop playsinline preload="auto">
      <source src="/output.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="absolute inset-0 flex items-center justify-center px-6">
      <h1
        class="text-white text-center font-bold"
        style="font-size: clamp(1rem, 6vw, 10rem); line-height: 1.1; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);"
      >
        Uncover Hidden Stories <br />of Santa Cruz
      </h1>
    </div>
  </div>
  <h1 class="text-center text-red-500">Coming soon!!!</h1>
</BaseLayout>
